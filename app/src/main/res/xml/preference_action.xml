<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:title="@string/setting_action"
        app:iconSpaceReserved="false">
        <ListPreference
            android:defaultValue="NONE"
            android:entries="@array/action_string"
            android:entryValues="@array/action_key"
            android:key="tilt_left"
            android:title="@string/left_tilt_action"
            app:iconSpaceReserved="false" />
        <ListPreference
            android:defaultValue="NONE"
            android:entries="@array/action_string"
            android:entryValues="@array/action_key"
            android:key="tilt_right"
            android:title="@string/right_tilt_action"
            app:iconSpaceReserved="false" />
        <ListPreference
            android:defaultValue="NONE"
            android:entries="@array/action_string"
            android:entryValues="@array/action_key"
            android:key="tilt_up"
            android:title="@string/up_tilt_action"
            app:iconSpaceReserved="false" />
        <ListPreference
            android:defaultValue="NONE"
            android:entries="@array/action_string"
            android:entryValues="@array/action_key"
            android:key="tilt_down"
            android:title="@string/down_tilt_action"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/setting_swipe"
        app:iconSpaceReserved="false">
        <ListPreference
            android:defaultValue="NONE"
            android:entries="@array/action_string"
            android:entryValues="@array/action_key"
            android:key="swipe_tilt_left"
            android:title="@string/left_tilt_action"
            app:iconSpaceReserved="false" />
        <ListPreference
            android:defaultValue="NONE"
            android:entries="@array/action_string"
            android:entryValues="@array/action_key"
            android:key="swipe_tilt_right"
            android:title="@string/right_tilt_action"
            app:iconSpaceReserved="false" />
        <ListPreference
            android:defaultValue="NONE"
            android:entries="@array/action_string"
            android:entryValues="@array/action_key"
            android:key="swipe_tilt_up"
            android:title="@string/up_tilt_action"
            app:iconSpaceReserved="false" />
        <ListPreference
            android:defaultValue="NONE"
            android:entries="@array/action_string"
            android:entryValues="@array/action_key"
            android:key="swipe_tilt_down"
            android:title="@string/down_tilt_action"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/setting_general"
        app:iconSpaceReserved="false">
        <SwitchPreference
            android:defaultValue="false"
            android:key="vibration"
            android:title="@string/vibration"
            app:iconSpaceReserved="false"/>
        <SeekBarPreference
            android:defaultValue="500"
            android:key="delay"
            android:max="2000"
            android:title="@string/delay"
            app:iconSpaceReserved="false"
            app:showSeekBarValue="true" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/setting_sensitivity"
        app:iconSpaceReserved="false">
        <SeekBarPreference
            android:defaultValue="50"
            android:key="hor_sensitivity"
            android:max="100"
            android:title="@string/horizontal_sensitivity"
            app:iconSpaceReserved="false"
            app:showSeekBarValue="true" />
        <SeekBarPreference
            android:defaultValue="50"
            android:key="ver_sensitivity"
            android:max="100"
            android:title="@string/vertical_sensitivity"
            app:iconSpaceReserved="false"
            app:showSeekBarValue="true" />
        <SeekBarPreference
            android:defaultValue="10"
            android:key="min_angle"
            android:max="90"
            android:title="@string/minimum_angle"
            app:iconSpaceReserved="false"
            app:showSeekBarValue="true" />
        <SeekBarPreference
            android:defaultValue="20"
            android:key="max_angle"
            android:max="90"
            android:title="@string/maximum_angle"
            app:iconSpaceReserved="false"
            app:showSeekBarValue="true" />
    </PreferenceCategory>
</PreferenceScreen>