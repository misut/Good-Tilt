<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:title="@string/setting_action"
        app:iconSpaceReserved="false">
        <ListPreference
            android:defaultValue="NONE"
            android:entries="@array/action_string"
            android:entryValues="@array/action_key"
            android:key="tilt_left"
            android:title="@string/left_tilt_action"
            app:iconSpaceReserved="false" />
        <ListPreference
            android:defaultValue="NONE"
            android:entries="@array/action_string"
            android:entryValues="@array/action_key"
            android:key="tilt_right"
            android:title="@string/right_tilt_action"
            app:iconSpaceReserved="false" />
        <ListPreference
            android:defaultValue="NONE"
            android:entries="@array/action_string"
            android:entryValues="@array/action_key"
            android:key="tilt_up"
            android:title="@string/up_tilt_action"
            app:iconSpaceReserved="false" />
        <ListPreference
            android:defaultValue="NONE"
            android:entries="@array/action_string"
            android:entryValues="@array/action_key"
            android:key="tilt_down"
            android:title="@string/down_tilt_action"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/setting_swipe"
        app:iconSpaceReserved="false">
        <ListPreference
            android:defaultValue="NONE"
            android:entries="@array/action_string"
            android:entryValues="@array/action_key"
            android:key="swipe_tilt_left"
            android:title="@string/left_tilt_action"
            app:iconSpaceReserved="false" />
        <ListPreference
            android:defaultValue="NONE"
            android:entries="@array/action_string"
            android:entryValues="@array/action_key"
            android:key="swipe_tilt_right"
            android:title="@string/right_tilt_action"
            app:iconSpaceReserved="false" />
        <ListPreference
            android:defaultValue="NONE"
            android:entries="@array/action_string"
            android:entryValues="@array/action_key"
            android:key="swipe_tilt_up"
            android:title="@string/up_tilt_action"
            app:iconSpaceReserved="false" />
        <ListPreference
            android:defaultValue="NONE"
            android:entries="@array/action_string"
            android:entryValues="@array/action_key"
            android:key="swipe_tilt_down"
            android:title="@string/down_tilt_action"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/setting_area"
        app:iconSpaceReserved="false">
        <SeekBarPreference
            android:defaultValue="50"
            android:key="area_width"
            android:max="333"
            android:title="@string/area_width"
            app:updatesContinuously="true"
            app:iconSpaceReserved="false" />
        <SeekBarPreference
            android:defaultValue="500"
            android:key="area_height"
            android:max="1000"
            android:title="@string/area_height"
            app:updatesContinuously="true"
            app:iconSpaceReserved="false" />
        <SeekBarPreference
            android:defaultValue="500"
            android:key="area_vertical_position"
            android:max="1000"
            android:title="@string/area_vertical_position"
            app:updatesContinuously="true"
            app:iconSpaceReserved="false" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="transparent"
            android:title="@string/area_transparent"
            app:iconSpaceReserved="false"/>
    </PreferenceCategory>


    <PreferenceCategory
        android:title="@string/setting_general"
        app:iconSpaceReserved="false">
        <SwitchPreference
            android:defaultValue="false"
            android:key="vibration"
            android:title="@string/vibration"
            app:iconSpaceReserved="false"/>
        <SeekBarPreference
            android:defaultValue="500"
            android:key="delay"
            android:max="2000"
            android:title="@string/delay"
            app:iconSpaceReserved="false"
            app:showSeekBarValue="true" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/setting_sensitivity"
        app:iconSpaceReserved="false">
        <SeekBarPreference
            android:defaultValue="50"
            android:key="upside_sensitivity"
            android:max="100"
            android:title="@string/upside_sensitivity"
            app:iconSpaceReserved="false"
            app:showSeekBarValue="true" />
        <SeekBarPreference
            android:defaultValue="50"
            android:key="downside_sensitivity"
            android:max="100"
            android:title="@string/downside_sensitivity"
            app:iconSpaceReserved="false"
            app:showSeekBarValue="true" />
        <SeekBarPreference
            android:defaultValue="50"
            android:key="left_sensitivity"
            android:max="100"
            android:title="@string/left_sensitivity"
            app:iconSpaceReserved="false"
            app:showSeekBarValue="true" />
        <SeekBarPreference
            android:defaultValue="50"
            android:key="right_sensitivity"
            android:max="100"
            android:title="@string/right_sensitivity"
            app:iconSpaceReserved="false"
            app:showSeekBarValue="true" />
        <SeekBarPreference
            android:defaultValue="10"
            android:key="min_angle"
            android:max="90"
            android:title="@string/minimum_angle"
            app:iconSpaceReserved="false"
            app:showSeekBarValue="true" />
        <SeekBarPreference
            android:defaultValue="20"
            android:key="max_angle"
            android:max="90"
            android:title="@string/maximum_angle"
            app:iconSpaceReserved="false"
            app:showSeekBarValue="true" />
        <SeekBarPreference
            android:defaultValue="45"
            android:key="tan_quad_1"
            android:max="90"
            android:title="@string/tangent_quad_1"
            app:iconSpaceReserved="false"
            app:showSeekBarValue="true" />
        <SeekBarPreference
            android:defaultValue="45"
            android:key="tan_quad_2"
            android:max="90"
            android:title="@string/tangent_quad_2"
            app:iconSpaceReserved="false"
            app:showSeekBarValue="true" />
        <SeekBarPreference
            android:defaultValue="45"
            android:key="tan_quad_3"
            android:max="90"
            android:title="@string/tangent_quad_3"
            app:iconSpaceReserved="false"
            app:showSeekBarValue="true" />
        <SeekBarPreference
            android:defaultValue="45"
            android:key="tan_quad_4"
            android:max="90"
            android:title="@string/tangent_quad_4"
            app:iconSpaceReserved="false"
            app:showSeekBarValue="true" />
    </PreferenceCategory>
</PreferenceScreen>